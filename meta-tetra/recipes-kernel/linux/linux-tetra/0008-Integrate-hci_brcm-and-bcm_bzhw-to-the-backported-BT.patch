+	/* send pending packets and change state to HCIBRCM_AWAKE */
+	__brcm_do_awake(brcm);
+
+out:
+	spin_unlock_irqrestore(&brcm->hcibrcm_lock, flags);
+
+	/* actuabrcmy send the packets */
+	hci_uart_tx_wakeup(hu);
